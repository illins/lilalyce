{% extends "apps/wp/templates/pipeline/form.twig" %}

{% block main %}
  <div class="panel panel-default">
    <div class="panel-heading">
      &nbsp;
    </div>

    <div class="panel-body">
      {% for field in form.visible %}
        {{ field.field|raw }}
      {% endfor %}

      {% for field in form.hidden %}
        {{ field.field|raw }}
      {% endfor %}

      <hr />
      <div id="twitter_user">
        <i class="fa fa-spinner fa-spin"></i> Loading
      </div>
    </div>
  </div>
      
      <script id="template_twitter_user" type="text/template">
        <h4>You are logged in as</h4>
        <div class="media">
        <a class="pull-left" href="#">
        <img class="media-object" src="<%= photo_url %>" alt="<%= name %>">
        </a>
        <div class="media-body">
        <h4 class="media-heading"><%= name %> [<%= screen_name %>]</h4></div>
        </div>
      </script>

  <script>
    $(function() {
      sidebar_init();
      twitter_loggedin();
    });
  </script>
{% endblock main %}