{% extends "apps/wp/templates/pipeline/form.twig" %}

{% block main %}
  <div class="panel panel-default">
    <div class="panel-heading">
      Select Your contact list.
    </div>

    <div class="panel-body">
      {#{% for field in form.visible %}
        {{ field.field|raw }}
      {% endfor %}#}

      {{ form.visible.delivery_message.field|raw }}

      {{ form.visible.expiring_date.field|raw }}

      {% for field in form.hidden %}
        {{ field.field|raw }}
      {% endfor %}

      <br />
      <div class="well well-sm">Email List</div>
      <table class="table table-hover">
        <tr>
          <th style="width: 5px;"></th>
          <th>Profile</th>
          <th>List</th>
        </tr>
        {% for contact in contact_list %}
          <tr>
            <td>
              <input type="radio" name="contact_id" value="{{ contact.id }}" {% if contact_id == contact.id %}selected{% endif %} />
            </td>
            <td>{{ contact.profile.name }}</td>
            <td>{{ contact.name }}</td>
          </tr>
        {% endfor %}
      </table>
    </div>
  </div>

  {#<script>
    $(document).ready(function() {
      user_loggedin(profile_init);
      sidebar_init();
    });
  </script>#}
  <script>
    $(function() {
      sidebar_init();
    });
  </script>
{% endblock main %}