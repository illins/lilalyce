{% extends "themes/blink/templates/bootstrap/base.twig" %}

{% block content %}
  <form class="form" method="POST" action="">
    <div class="panel panel-default">
      <div class="panel-body">
        
        {% for module_group in module_list | batch(3)%}
          <div class="row content-boxes-v2 margin-bottom-30">
            {% for module in module_group %}
              <div class="col-md-4 md-margin-bottom-30">                
                <h2 class="heading-sm">
                  <i class="icon-custom icon-sm icon-color-u fa fa-gift"></i>
                  <span>{{ module.name }}</span>
                </h2>
                <p>{{ module.description }}</p>
                <button type="button" class="btn btn-link select-module" data-id="{{ module.id }}">Continue</button>
              </div>
            {%endfor%}
          </div>
        {% endfor %}
      </div>
    </div>

    {% for field in form.hidden %}
      {{ field.field|raw }}
    {% endfor %}
    
  </form>
    
    <script>
      $(function() {
        $('.select-module').click(function(e) {
          $('#module_id').val($(e.target).data('id'));
          $('form').submit();
        });
      });
    </script>
{% endblock content %}