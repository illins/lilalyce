{% extends "apps/wp/templates/pipeline/base.twig" %}

{% block main %}
  
  <div id="login-options" class="btn-group-sm btn-group-justified">
    <a href="" class="btn btn-default">Email</a>
    <a href="" class="btn btn-default">Facebook</a>
    <a href="" class="btn btn-default">Twitter</a>
    <a href="" class="btn btn-default"></a>
  </div>
  
  <h3>Free for all</h3>
  <div class="list-group">
    <div href="#" class="list-group-item">
      <p class="list-group-item-text">Create a link that you can distribute in any medium you choose. Set a cap to limit how many Wapo(s) are sent.</p>
      <p><a href="/wp/profile/ffa/">Choose</a></p>
    </div>
  </div>
  
  <h3>Email</h3>
  <div class="list-group">
    <div href="#" class="list-group-item">
      <p class="list-group-item-text">Send a Wapo to an email or email list. Each user must authenticate through their email to confirm account.</p>
      <p><a href="/wp/profile/email/">Email</a> or <a href="/wp/profile/list/">Email List</a></p>
    </div>
  </div>

  <h3>Facebook</h3>
  <div class="list-group">
    <div href="#" class="list-group-item">
      <h4 class="list-group-item-heading">Friends</h4>
      <p class="list-group-item-text">Login to Facebook to send a wapo to selected Friends. Anyone who clicks on link must be validated (they must log in through Facebook) and validated to be your friend.</p>
      <p><a href="">Choose</a></p>
    </div>
  </div>
  <div class="list-group">
    <div href="#" class="list-group-item">
      <h4 class="list-group-item-heading">Followers</h4>
      <p class="list-group-item-text">Login to Facebook to attach your account to the Wapo and create a link that can be posted on your Facebook account. Anyone who clicks on the link must be validated(they must log in through Facebook) and validated that they follower your account.</p>
      <p><a href="">Choose</a></p>
    </div>
  </div>
  <div class="list-group">
    <div href="#" class="list-group-item">
      <h4 class="list-group-item-heading">Page Followers</h4>
      <p class="list-group-item-text">Login to Facebook to attach one of your pages to a Wapo. Anyone who clicks on the link must be validated (they must log in through Facebook) and validated that they follow this page.</p>
      <p><a href="">Choose</a></p>
    </div>
  </div>
  
  <h3>Instagram</h3>
  <div class="list-group">
    <div href="#" class="list-group-item">
      <h4 class="list-group-item-heading">Followers</h4>
      <p class="list-group-item-text">Login through Instagram to attach your account to a Wapo. Only your followers (Authenticated and confirmed) can download the Wapo.</p>
      <p><a href="">Choose</a></p>
    </div>
  </div>
  
  <h3>Twitter</h3>
  <div class="list-group">
    <div href="#" class="list-group-item">
      <h4 class="list-group-item-heading">Followers</h4>
      <p class="list-group-item-text">Login through Twitter and post a link for a Wapo. Only your followers (Authenticated and confirmed) can download the Wapo.</p>
      <p><a href="">Choose</a></p>
    </div>
  </div>
  
  <script>
    var user = {account:'Facebook', logged_in: true};
    
    $(document).ready(function() {
      // If user is logged in, don't show options to log in.
      if(user.logged_in) {
        $("#login-options").hide();
      }
      
      sidebar_init();
    });
    
  </script>
{% endblock main %}