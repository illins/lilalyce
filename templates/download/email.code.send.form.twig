{% extends "apps/wp/templates/base.twig" %}

{% block content %}
  <form class="form" action="" method="post">
    <div class="row">
    <div class="col-xs-offset-3 col-xs-6">
      {% for field in form.visible %}
        {{ field.field|raw }}
      {% endfor %}

      {% for field in form.hidden %}
        {{ field.field|raw }}
      {% endfor %}
      
      <button class="btn btn-primary btn-block">Send Confirmation Code</button>
    </div>
  </div>
  </form>
{% endblock content %}